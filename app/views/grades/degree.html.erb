<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <% user_credit=0%>
          <% if student_logged_in? %><h3 class="panel-title">学位课管理</h3><% end %>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <table class="table table-striped table-hover">
            <thead>

            <tr>
              <th>课程名</th>
              <th>学时学分</th>
              <th>授课老师</th>
              <th>课程属性</th>
              <th>上课时间</th>
              <th>学位课</th>
            </tr>
            </thead>
            <tbody>
            <% @grades.each do |grade| %>
                <tr>
                  <td><%= grade.course.name %></td>
                  <td><%= grade.course.credit %></td>
                  <td><%= grade.course.teacher.name %></td>
                  <td><%= grade.course.course_type %></td>
                  <td><%= grade.course.course_time %></td>
                  <td>
                    <%= check_box_tag 'degree', grade.id, grade.degree, data: {'grade-id' => grade.id}, class: 'is-degree-input' %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>